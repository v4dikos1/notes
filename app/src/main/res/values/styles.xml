<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/card_margin</item>
        <item name="android:paddingEnd">@dimen/card_margin</item>
        <item name="android:paddingBottom">@dimen/card_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_margin</item>
        <item name="cardElevation">@dimen/card_margin</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin_bottom_top</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>